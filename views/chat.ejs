<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-6">
        <h2>Channels</h2>
        <!-- links to all chatrooms -->
        <!-- link to chat/:name instead: " chat/rooms[i].name "  ??-->
        <% for(let i = 0; i < rooms.length; i++) {  %>
        <div><a href="/chat/<%=rooms[i]._id%>"> <%= rooms[i].name %> </a></div>

        <% } %>
        <!-- set up a new room -->
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            +
        </button>
    </div>
    <div class="col-md-6">
        <h2>All members</h2>
        <div id="users">

        </div>

    </div>
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label for new_room>Type the name of the room and click save</label>
                <input id="new_room" type="text" placeholder="Name of the room...">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="add_room" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<script src="/public/scripts/newroom.js"></script>